    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
        <Button
            android:id="@+id/answerAW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgAW"
            android:layout_alignParentLeft="true"
            android:text="a)"
            android:gravity="left|center_vertical"
            style="?android:attr/borderlessButtonStyle"

        />
        <ImageView
            android:id="@id/imgAW"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@drawable/btn_check_buttonless_on"
        />
    </RelativeLayout>
    
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
        <Button
            android:id="@+id/answerBW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgBW"
            android:layout_alignParentLeft="true"
            android:text="b)"
            android:gravity="left|center_vertical"
            style="?android:attr/borderlessButtonStyle"

        />
        <ImageView
            android:id="@id/imgBW"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@drawable/btn_check_buttonless_on"
        />
    </RelativeLayout>
    
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
        <Button
            android:id="@+id/answerCW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgCW"
            android:layout_alignParentLeft="true"
            android:text="c)"
            android:gravity="left|center_vertical"
            style="?android:attr/borderlessButtonStyle"

        />
        <ImageView
            android:id="@id/imgCW"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@drawable/btn_check_buttonless_on"
        />
    </RelativeLayout>
    

    
    <Button
        android:id="@+id/nextW"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
    />

